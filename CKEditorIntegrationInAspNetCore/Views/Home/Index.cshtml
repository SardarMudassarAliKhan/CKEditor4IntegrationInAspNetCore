<!-- Views/Home/Index.cshtml -->
@model IEnumerable<Post>
@{
    //Add the Layout File
    Layout= "~/Views/Shared/_Layout.cshtml";
}
<h2>Posts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@Html.Raw(post.Content)</td>
            </tr>
        }
    </tbody>
</table>
